docker exec -it pf_emulator  ip addr show eth0
docker exec -it pf_droidflow ip addr show eth0

# ขึ้นระบบ + โชว์ปลายทางที่เข้าถึงได้ (noVNC/VNC/ADB/Flask)
make up

# ดูปลายทางอีกรอบ (สคริปต์ tools/show-endpoints.sh)
make ps

# ดู log สด ๆ ของทุกคอนเทนเนอร์
make logs

# ปิดระบบ
make down


# Restart the adb server inside the emulator container
docker exec pf_emulator adb kill-server
docker exec pf_emulator adb start-server

# Verify the emulator is listed as “device” (not “offline”)
docker exec pf_emulator adb devices

# Check the container health again
docker inspect -f '{{.State.Health.Status}}' pf_emulator

docker compose up -d --force-recreate